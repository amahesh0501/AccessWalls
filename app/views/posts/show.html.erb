<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-2">
        <img class="vote" data-id="<%=@post.id%>" src="http://www.icondig.com/data/icons/nounproject/512/330.png" height="100" width="100"/>
        <br/><br/>
        <p class="vote-count-<%=@post.id%>"><%=@post.vote_count%> Votes</p>
    </div>
    <div class="col-md-6">
        <h3><%=@post.title%></h3>
        <% if @post.link %>
        <a href="<%=@post.link%>" target="_blank">View Link</a><br>
        <p><%= @post.description %></p>
        <%end%>

    </div>
    <div class="col-md-2 post-info">
        <% if @post.user_id %>
          <% user = User.find(@post.user_id) %>
        <%end%>
        <p>Posted by: <%=user.name%></p>
        <%formatted_date = @post.created_at.strftime('%b %d %Y at %H:%M')%>
        <p><%=formatted_date%></p>

        <% if @can_edit %>
          <a href="/posts/<%=@id%>/edit">Edit this post</a><br/><br/>
          <form action="/posts/<%= @post.id %>" method="post">
            <input name="_method" type="hidden" value="delete" />
            <button type="submit" class="btn btn-danger ">Delete Post</button>
          </form>
        <%end%>
    </div>
    <div class="col-md-1"></div>
</div>
<br/>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
      <h3>Comments</h3>

      <% @comments.each do |comment| %>
        <p><%=comment.description%></p>
        <% user = User.find(comment.user_id) %>
        <p>By <%=user.name%></p>

        <% if @user_id == comment.user_id %>
          ---delete----
        <%end%>
        <hr/>
      <%end%>

      <%= @comment.errors[:description].join("<br>") if @comment.errors[:description] %>

      <%= form_for [@wall, @post, @comment] do |f| %>
        <div class="form-group">
          <%= f.label :comment %><br/>
          <%= f.text_area :description, :cols => "60", :rows => "3" %><br/>
        </div>
        <%= f.submit "Post Comment", :class => 'btn btn-success' %>
      <% end %>
      <br/><br/>

    </div>
</div>











